<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>

    <div class="container">
      <%= render 'layouts/header' %>

     <% if notice.present? -%>
        <p class="notice"><%= notice %></p>
      <% end -%>

      <% if alert.present? -%>
        <p class="alert"><%= alert %></p>
      <% end -%>

      <section class="round">
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
