<h1>Listing orders</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Card type</th>
    <th>Card expires on</th>
    <th>Street</th>
    <th>City</th>
    <th>Zip</th>
    <th>State</th>
    <th>Phone</th>
    <th>Country</th>
    <th>Cart</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.first_name %></td>
    <td><%= order.last_name %></td>
    <td><%= order.card_type %></td>
    <td><%= order.card_expires_on %></td>
    <td><%= order.street %></td>
    <td><%= order.city %></td>
    <td><%= order.zip %></td>
    <td><%= order.state %></td>
    <td><%= order.phone %></td>
    <td><%= order.country %></td>
    <td><%= order.cart_id %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

