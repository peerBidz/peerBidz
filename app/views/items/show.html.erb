<%= image_tag @item.photo.url(:small)  %>

<p>
  <b>Title:</b>
  <%= @item.title %>
</p>

<p>
  <b>Description:</b>
  <%= @item.description %>
</p>

<p>
  <b>Condition: </b>
  <%if @item.condition?%>
    New
  <%else%>
    Used
  <%end%>
</p>

<p>
  <b>Starting price:</b>
  <%= @item.starting_price %>
</p>


<p id="current-price">
  <b>Current price: </b>
  <% if @highest_bid != nil %>
  <%= @highest_bid.bid_amount %>
  <% else %>
  <%= @item.starting_price %>
  <% end %>
</p>

<!-- <p>
  <b>Duration:</b>
  <%#= @item.duration %>
</p> -->

<p>
  <b>Category:</b>
  <%= Category.find(@item.category_id).name %>
</p>

<p>
  <b>Seller:</b>
  <%= User.find(@item.seller_id).email %>
</p>

<% if user_signed_in? && current_user.is_seller? && current_user.id == @item.seller_id%>
<%= link_to 'Edit', edit_item_path(@item) %> |
<% end %>

<% if user_signed_in? %>
    <% if @item.seller_id != current_user %>

<%= render :template => 'biddings/new', :locals => {:bidding => @bidding, :item => @item } %>
    <% end %>
<% end %>

<%= link_to 'Back', items_path %>

