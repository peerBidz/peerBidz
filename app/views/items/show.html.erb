<!-- for the main home page ajax working -->
<style type="text/css">
#ajax_group {}
</style>

<p id="notice"><%= notice %></p>


<h3><%= @item.title %></h3>


<div class="item-show-container">
<div class="item-image">
<%= image_tag @item.photo.url(:medium)  %>
</div>

<div class ="item-details" ,id="ajax_group">
<p>
  <b>Description:</b>
  <%= @item.description %>
</p>

<p>
  <b>Condition: </b>
  <%if @item.condition?%>
    New
  <%else%>
    Used
  <%end%>
</p>
<p>
  <b>Starting price:</b>
  <%= number_to_currency(@item.starting_price, :unit=>"$") %>
</p>
<p>
  <b>Current price: </b>
  <%= number_to_currency(@item.bidvalue, :unit=>"$") %>
</p>
<p>
  <b>Highest bidder: </b>
  <%= User.find(@item.biduser).email %>
</p>
<!-- <p>
  <b>Duration:</b>
  <%#= @item.duration %>
</p> -->
<p>
  <b>Category:</b>
  <%= Category.find(@item.category_id).name %>
</p>
<p>
  <b>Seller:</b>
  <%= User.find(@item.seller_id).email %>
</p>

</div>
</div>



<% if user_signed_in? && current_user.is_seller? && current_user.id == @item.seller_id%>
<%= link_to 'Edit', edit_item_path(@item) %> |
<% end %>

<% if user_signed_in? %>
    <% if current_user.is_seller? %>

    <%else%>
        <%= form_for @item, :html => { :multipart => true } do |f| %>
        <div class="field">
            <br />
             <%= f.label "BidValue" %><br />
            <%= number_to_currency(f.text_field :bidvalue, :unit=>"$") %>
          </div>
         
          <%= f.hidden_field :biduser, :value => current_user.id %>

          <div class="actions">
            <%= f.submit "Place Bid"%>
          </div>
        <% end %>
    <% end %>
<% end %>

