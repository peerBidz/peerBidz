<!-- for the main home page ajax working -->
<style type="text/css">
#ajax_group {}
</style>

<p id="notice"><%= notice %></p>

<h3><%= @item.title %></h3>


<div class="item-show-container">
<div class="item-image">
<%= image_tag @item.photo.url(:medium)  %>
</div>

<div class ="item-details" ,id="ajax_group">
<p>
  <b>Description:</b>
  <%= @item.description %>
</p>

<p>
  <b>Condition: </b>
  <%if @item.condition?%>
    New
  <%else%>
    Used
  <%end%>
</p>
<p>
  <b>Starting price:</b>
  <%= number_to_currency(@item.starting_price, :unit=>"$") %>
</p>


<p id="current-price">
  <b>Current price: </b>
  <% if @highest_bid != nil %>
  <%= number_to_currency(@highest_bid.bid_amount,:unit=>"$") %>
  <% else %>
  <%= number_to_currency(@item.starting_price, :unit=>"$") %>
  <% end %>
</p>

<!-- <p>
  <b>Duration:</b>
  <%#= @item.duration %>
</p> -->
<p>
  <b>Category:</b>
  <%= Category.find(@item.category_id).name %>
</p>
<p>
  <b>Seller:</b>
  <%= User.find(@item.seller_id).email %>
</p>


<% if user_signed_in? && current_user.is_seller? && current_user.id == @item.seller_id%>
<%= link_to 'Edit', edit_item_path(@item) %> 
<% end %>

<% if user_signed_in? %>
    <% if @item.seller_id != current_user %>


<%= render :template => 'biddings/new', :locals => {:bidding => @bidding, :item => @item } %>

    <% end %>
<% end %>


</div>
</div>



