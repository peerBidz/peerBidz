<!--<h1>Listing items</h1>-->

<% if user_signed_in? %>
<a class="btn primary large offer-item" href='<%=new_item_path%>'>Offer your item for bidding »</a>
<% else %>
<a class="btn primary large offer-item" href='/users/sign_in'>Login to offer your item »</a>
 <% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Photo</th>
    <th>Description</th>
    <th>Condition</th>
    <th>Starting price</th>
    <!--<th>Duration</th>-->
    <th>Category</th>
    <th>Seller</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><%= link_to image_tag (item.photo.url(:small)), {:action => 'show', :controller => 'items'}  %></td>
    <td><%= item.description %></td>
    <td><%if item.condition?%>
            New
        <%else%>
            Used
        <%end%>
    </td>
    <td><%= item.starting_price %></td>
    <!--<td><%#= item.duration %></td>         -->
    <td><%= item.category_id %></td>
    <td><%= item.seller_id %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>

    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>

<br />