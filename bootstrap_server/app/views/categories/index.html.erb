<% my_address = IPSocket.getaddress(Socket.gethostname) %>
<script>
	function messageParent(url)
	{
		this.document.location.href = "http://<%= my_address %>:3001/redirect?url=" +url;
	}
</script>
<table>
<% @categories.each do |category| %>
  <tr>
    <td><a href='#' onclick="messageParent('<%= category.name %>')"><%= category.name %></a></td>
</tr>
<% end %>
</table>
